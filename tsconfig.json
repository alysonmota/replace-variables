{
  "compilerOptions": {
    "lib": [
      "ES2023"
    ],
    "target": "ES2022",
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "out"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
